<div class="activity_list-admin">
    <table class="table table-striped table-hover align-middle mt-5">
        <thead class="text-success">
        <tr>
            <th scope="col">ID</th>
            <th scope="col" class="col-10">Название</th>
            <th scope="col" class="text-center">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <th scope="row" data-field="id">{{ type.id }}</th>
                <td data-field="title">{{ type.title }}</td>
                <td class="text-center">
                    <i class="fa-solid fa-pencil text-success mx-2 js-types-link__edit activity_action_btn"></i>
                    <a href="/admin/deleteTypes?{{ type.id }}" onclick="return confirm('Вы уверенны что хотите удалить?')"><i class="fa-solid fa-trash-can text-danger mx-2 activity_action_btn"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <th colspan="10" class="text-center">Список активностей пуст.</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
