<div class="activity_list">
    <table class="table table-striped table-hover mt-5">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th class="col-10" scope="col">Название <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <th scope="row" data-field="id">{{ type.id }}</th>
                <td data-field="title">{{ type.title }}</td>
                <td>
                    <i class="fa-solid fa-pencil text-success mx-2 js-types-link__edit activity_action_btn"></i>
                    <a href="/admin/deleteTypes?{{ type.id }}"><i class="fa-solid fa-trash-can text-danger mx-2 activity_action_btn"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <th colspan="10" class="text-center">Список активностей пуст.</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
