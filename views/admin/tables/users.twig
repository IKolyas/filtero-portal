<div class="activity_list">
    <table class="table table-striped table-hover align-middle mt-5">
        <thead class="text-success">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Имя</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Логин</th>
            <th scope="col">e-mail</th>
            <th scope="col">Администратор</th>
            <th scope="col" class="text-center">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for useritem in user %}
            <tr>
                <th scope="row" data-field="id" class="col-auto">{{ useritem.id }}</th>
                <td data-field="first_name" class="col-auto">{{ useritem.first_name }}</td>
                <td data-field="last_name" class="col-auto">{{ useritem.last_name }}</td>
                <td data-field="login" class="col-auto">{{ useritem.login }}</td>
                <td data-field="email" class="col-auto">{{ useritem.email }}</td>
                <td data-field="is_admin" class="col-1">{% if useritem.is_admin %} ДА {% else %} НЕТ {% endif %}</td>
                <td class="text-center col-1">

                   <i class="fa-solid fa-pencil text-success mx-2 js-types-link__edit activity_action_btn"></i>
                    <a href="/admin/deleteUser?{{ useritem.id }}" onclick="return confirm('Вы уверенны что хотите удалить?')"><i class="fa-solid fa-trash-can text-danger mx-2 activity_action_btn"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <th colspan="10" class="text-center">Список активностей пуст.</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
