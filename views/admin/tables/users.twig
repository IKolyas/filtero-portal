<div class="activity_list">
    <table class="table table-striped table-hover mt-5">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Имя <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Фамилия <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Логин <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Пароль <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Е-майл <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Админ или нет <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for useritem in user %}
            <tr>
                <th scope="row">{{ useritem.id }}</th>
                <td class="js-types-content">{{ useritem.first_name }}</td>
                <td class="js-types-content">{{ useritem.last_name }}</td>
                <td class="js-types-content">{{ useritem.login }}</td>
                <td class="js-types-content">{{ useritem.password }}</td>
                <td class="js-types-content">{{ useritem.email }}</td>
                <td class="js-types-content">{{ useritem.is_admin }}</td>
                <td>
                    <a href="#" class="js-types-link__edit" data-id="{{ useritem.id }}"><i class="fa-solid fa-pencil text-success mx-2 activity_action_btn"></i></a>
                    <a href="/admin/deleteUser?{{ useritem.id }}"><i class="fa-solid fa-trash-can text-danger mx-2 activity_action_btn"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <th colspan="10" class="text-center">Список активностей пуст.</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
