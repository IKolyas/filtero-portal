<section class = "vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Регистрация</p>

                <form class="mx-1 mx-md-4" action = "/auth/registration" method = "POST">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="first_name">Имя </label>
                      <input type="text" id="first_name" class="form-control" name = "first_name"
                      {% if old and old.first_name %}
                        value="{{ old.first_name }}"
                      {% endif %}

                      />
                      {% if errors and errors.first_name %}
                        <span class="text-danger"> {{ errors.first_name }} </span>
                      {% endif %}
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="last_name">Фамилия</label>
                      <input type="text" id="last_name" class="form-control" name = "last_name"
                              {% if old and old.last_name %}
                                value="{{ old.last_name }}"
                              {% endif %}
                      />
                      {% if errors and errors.last_name %}
                        <span class="text-danger"> {{ errors.last_name }} </span>
                      {% endif %}
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="email">Электронная почта</label>
                      <input type="email" id="email" class="form-control" name = "email"
                              {% if old and old.email %}
                                value="{{ old.email }}"
                              {% endif %}
                      />
                      {% if errors and errors.email %}
                        <span class="text-danger"> {{ errors.email }} </span>
                      {% endif %}
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="login">Логин</label>
                      <input type="text" id="login" class="form-control" name = "login"
                              {% if old and old.login %}
                                value="{{ old.login }}"
                              {% endif %}
                      />
                      {% if errors and errors.login %}
                        <span class="text-danger"> {{ errors.login }} </span>
                      {% endif %}
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="password">Пароль</label>
                      <input type="password" id="password" class="form-control" name = "password"
                              {% if old and old.password %}
                                value="{{ old.password }}"
                              {% endif %}
                      />
                      {% if errors and errors.password %}
                        <span class="text-danger"> {{ errors.password }} </span>
                      {% endif %}
                    </div>
                  </div>
              
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="password_r">Повторите пароль</label>
                    <input type="password" id="password_r" class="form-control" name = "password_r"/>

                    {% if errors and errors.password_r %}
                      <span class="text-danger"> {{errors.password_r}} </span>
                    {% endif %}
                    </div>
                  </div> 
              
                  <div class="form-check d-flex justify-content-around mb-5">
                    <div>
                      <input class="form-check-input me-2" type="checkbox" value="" id="checkbox" />
                      <label class="form-check-label" for="checkbox">
                        Запомнить меня
                      </label>
                    </div>
                    
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-primary btn-lg">Регистрировать</button>
                    </div>
                  </div>
                </form>
              </div>
              
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://www.moedelo.org/storage/uploads/club/article-knowledge/cover/aoSlpw6OHcx__opiSiDHAS2NTdYHsjab.jpg"
                  class="img-fluid" alt="Sample image">
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>