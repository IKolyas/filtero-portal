<div class="activity_list">
    <table class="table table-striped table-hover mt-5">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Учреждение <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Тип <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Возраст</th>
            <th scope="col">Раз в неделю <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Продолжительность <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Цена <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Цена за месяц <i class="fa-solid fa-arrow-down"></i></th>
            <th scope="col">Контакты</th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <th scope="row" data-field="id">{{ activity.id }}</th>
                <td data-field="title">{{ activity.title }}</td>
                <td data-field="institute_id" data-target-institute-id="{{ activity.institute_id }}">{{ activity.institute }}</td>
                <td data-field="activity_type_id" data-target-type-id="{{ activity.type_id }}">{{ activity.type }}</td>
                <td>
                    {{ activity.age }}
                    <div class="d-none" data-field="age_from">{{activity.age_from}}</div>
                    <div class="d-none" data-field="age_to">{{activity.age_to}}</div>
                </td>
                <td data-field="amount_of_week">{{ activity.amount_of_week }}</td>
                <td data-field="duration_time">{{ activity.duration_time }}</td>
                <td class="price-rub" data-field="price">{{ activity.price }}</td>
                <td class="price-rub" data-field="price_month">{{ activity.price_month }}</td>
                <td data-field="contacts">{{ activity.contacts }}</td>
                <td>
                    <i class="fa-solid fa-pencil text-success mx-2 js-types-link__edit activity_action_btn"></i>
                    <a href="/admin/deleteActivity?{{ activity.id }}" onclick="return confirm('Вы уверенны что хотите удалить?')"><i class="fa-solid fa-trash-can text-danger mx-2 activity_action_btn"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <th colspan="10" class="text-center">Список активностей пуст.</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
